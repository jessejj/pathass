<!DOCTYPE html>
<head>

    <title>Triage Cassettes</title>
 
	<HTA:APPLICATION
	APPLICATIONNAME = "Jesse's first HTA HTML Application"
	ID = "NAME"
        SINGLEINSTANCE = "Yes"
        SCROLL="no"
        BORDER="thin"
        INNERBORDER="no"
        MAXIMIZEBUTTON="no"
	SysMenu="no"
        
    />

</head>

<script language="VBScript">
    Sub Window_onLoad
        window.resizeTo 400,300
    End Sub
    
    Sub TriageCassettes
	    Set objShell = CreateObject("wscript.Shell")
		'objShell.run "cscript.exe TriageCassettesScript.vbs"

		FirstArgument = "FirstArgument"
		SecondArgument = "SecondArgument"
		ThirdArgument = "ThirdArgument"

		If document.GetElementByID("DismissAMP").checked = True Then
			FirstArgument = "DismissAMP"
		End If
		
		If document.GetElementByID("PrintCassettes").checked = True Then
			document.GetElementByID("DismissAMP").checked = True
			FirstArgument = "DismissAMP"
			SecondArgument = "PrintCassettes"
		End If

		ThirdArgument = document.GetElementByID("ExitBin").value

		objShell.run "cscript.exe TriageCassettesScript.vbs " & FirstArgument & " " & SecondArgument & " " & ThirdArgument

	    Set objShell = Nothing

		document.GetElementByID("RunButton").disabled = true

    End Sub

	Sub StopScript
	    Set objShell = CreateObject("wscript.Shell")
		objShell.run "taskkill.exe /F /IM cscript.exe /T"
		objShell.regwrite "HKEY_LOCAL_MACHINE\SOFTWARE\Wow6432Node\IMPAC\PseudoDriver\CIV-GRO-CAS1\v1.0\Directory Path", "\\CLPATHIF01\DIS_SHARE", "REG_SZ"
	    Set objShell = Nothing
	window.close()
	End Sub

</script>

<body style="font-family:'Segoe UI', Roboto,'Helvetica Neue',Arial,'Noto Sans',sans-serif">
<p style="text-align:center">This program helps with triaging cassettes</p>

<input type="checkbox" id="DismissAMP" name="DismissAMP" value="DismissAMP" checked>
<label for="DismissAMP">Dismiss AMP Warning</label><br>
<input type="checkbox" id="PrintCassettes" name="PrintCassettes" value="PrintCassettes" checked>
<label for="PrintCassettes">Click 'Print' button</label><br>

Choose exit bin: 
<select name = "ExitBin" id = "ExitBin">
	<option value = "ExitBin1" selected>Bin 1</option>
	<option value = "ExitBin2">Bin 2</option>
	<option value = "ExitBin3">Bin 3</option>
</select>

<br>
<br>
<p style="text-align:center">
<button type="button" onclick=TriageCassettes id="RunButton" name="RunButton">Run</button>
&nbsp;
<button type="button" onclick=StopScript id="StopButton" name="StopButton">Stop</button>
</p>

</body>
 
</html>
